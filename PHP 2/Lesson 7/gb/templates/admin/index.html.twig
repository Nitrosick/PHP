{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello, Admin!</h1>
        {% for order in orders %}
            <div>
                <h6>Date : {{ order.created_at }}</h6>
                <h6>Amount : {{ order.amount }}</h6>
            </div>
        {% endfor %}
    </div>
{% endblock %}
